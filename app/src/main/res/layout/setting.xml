<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >


    <include layout="@layout/header"
        android:id="@+id/header"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />



    <TextView
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:text="나는파도를즐겨"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:id="@+id/Username"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/Mydiary"
        style="@style/Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 쓴 일기"
        app:layout_constraintTop_toBottomOf="@+id/Username"
        android:textColor="#000"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/Mydiary"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="186dp">


        <TextView
            android:id="@+id/subject_text"
            style="@style/Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕한일기제목입니다."
            android:textColor="#000" />

        <TextView
            android:id="@+id/text"
            style="@style/Small"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:text="응아니에요한재형디자인을빨리빨리내야지개발자가개발도하는건데해커톤24시간밖에없는이런각박한시간속에서너가디자인을이렇게늦게해버리면개발자는그냥죽을수밖에없는거야."
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emotion_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/happy" />

            <TextView
                android:id="@+id/nickname_Dday_text"
                style="@style/Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="나는 파도를 즐겨 | 2024-01-06 20:03"
                android:textColor="#B3B3B3" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/Mydiary"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="186dp">


        <TextView
            android:id="@+id/subject_text"
            style="@style/Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕한일기제목입니다."
            android:textColor="#000" />

        <TextView
            android:id="@+id/text"
            style="@style/Small"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:text="응아니에요한재형디자인을빨리빨리내야지개발자가개발도하는건데해커톤24시간밖에없는이런각박한시간속에서너가디자인을이렇게늦게해버리면개발자는그냥죽을수밖에없는거야."
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emotion_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/happy" />

            <TextView
                android:id="@+id/nickname_Dday_text"
                style="@style/Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="나는 파도를 즐겨 | 2024-01-06 20:03"
                android:textColor="#B3B3B3" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
